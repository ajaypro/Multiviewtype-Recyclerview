<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@android:color/white">

    <ImageView
            android:id="@+id/imageBike"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/bike1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textBikemodel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/imageBike"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"/>

    <TextView
            android:id="@+id/textBikePhotographer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/imageBike"
            app:layout_constraintTop_toBottomOf="@id/textBikemodel"
             />

    <TextView
            android:id="@+id/textBikePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/imageBike"
            app:layout_constraintTop_toBottomOf="@id/textBikePhotographer"/>

</androidx.constraintlayout.widget.ConstraintLayout>